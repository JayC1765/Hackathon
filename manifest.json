{
  "manifest_version": 3,
  "name": "Our Extension",
  "version": "1.0",
  "action": {
    "popup": "./popup.html"
  },
  "description": "A plain text description",
  "icons": {},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.facebook.com/*",
        "*://www.instagram.com/*",
        "*://www.youtube.com/*",
        "*://www.9gag.com/*",
        "*://*.reddit.com/*",
        "*://www.tiktok.com/*",
        "*://www.twitter.com/*"
      ],
      "js": [
        "./sentance.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.jpg",
        "*.png"
      ],
      "matches": [
        "*://www.facebook.com/*",
        "*://www.instagram.com/*",
        "*://www.youtube.com/*",
        "*://www.9gag.com/*",
        "*://*.reddit.com/*",
        "*://www.tiktok.com/*",
        "*://www.twitter.com/*"
      ]
    }
  ]
}
